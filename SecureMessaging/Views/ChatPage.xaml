<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SecureMessaging.Converters"
             xmlns:models="clr-namespace:SecureMessaging.Models"
             x:Class="SecureMessaging.Views.ChatPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <converters:InverseBoolConverter x:Key="InverseBool" />
        <Style x:Key="CurrentUserMessageStyle" TargetType="Frame">
            <Setter Property="HorizontalOptions" Value="End" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>

        <Style x:Key="OtherUserMessageStyle" TargetType="Frame">
            <Setter Property="HorizontalOptions" Value="Start" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=LightGray, Dark=DarkGray}" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">
        <!-- Messages List -->
        <CollectionView Grid.Row="0" ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Message">
                    <Grid Padding="10,5">
                        <!-- Current User Message Template -->
                        <VerticalStackLayout 
                            HorizontalOptions="End"
                            Spacing="4"
                            IsVisible="{Binding IsCurrentUser}">

                            <Frame Style="{StaticResource CurrentUserMessageStyle}">
                                <Label Text="{Binding Content}" 
                                       TextColor="{AppThemeBinding Light=White, Dark=Black}" />
                            </Frame>

                            <HorizontalStackLayout Spacing="6" HorizontalOptions="End">
                                <Label Text="{Binding LocalCreatedAt, StringFormat='{0:HH:mm}'}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                                <Label Text="You"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                        <!-- Other User Message Template -->
                        <VerticalStackLayout 
                            HorizontalOptions="Start"
                            Spacing="4"
                            IsVisible="{Binding IsCurrentUser, Converter={StaticResource InverseBool}}">

                            <Label Text="{Binding SenderName}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />

                            <Frame Style="{StaticResource OtherUserMessageStyle}">
                                <Label Text="{Binding Content}" 
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            </Frame>

                            <Label Text="{Binding LocalCreatedAt, StringFormat='{0:HH:mm}'}"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Message Input -->
        <Grid Grid.Row="1" Padding="10" ColumnDefinitions="*,Auto">
            <Entry Grid.Column="0" 
                   Text="{Binding MessageText}" 
                   Placeholder="Type a message..."
                   ReturnCommand="{Binding SendMessageCommand}"/>
            <Button Grid.Column="1" 
                    Text="Send" 
                    Command="{Binding SendMessageCommand}"/>
        </Grid>
    </Grid>
</ContentPage>