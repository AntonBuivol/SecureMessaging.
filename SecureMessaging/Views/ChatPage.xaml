<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureMessaging.Views.ChatPage"
             Title="{Binding Chat.DisplayName}">

    <Grid>

        <CollectionView ItemsSource="{Binding Messages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame BackgroundColor="{Binding IsCurrentUser, Converter={StaticResource MessageColorConverter}}"
                               Padding="10"
                               HorizontalOptions="{Binding IsCurrentUser, Converter={StaticResource MessageAlignmentConverter}}">
                            <Label Text="{Binding Content}"
                                   FontSize="16"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid RowDefinitions="Auto" 
              Padding="10"
              VerticalOptions="End">
            <Entry Text="{Binding MessageText}"
                   Placeholder="Type a message..."
                   ReturnCommand="{Binding SendMessageCommand}"/>
        </Grid>

    </Grid>
</ContentPage>