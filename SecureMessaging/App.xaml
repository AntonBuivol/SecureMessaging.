<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SecureMessaging"
             xmlns:converters="clr-namespace:SecureMessaging.Converters"
             x:Class="SecureMessaging.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Конвертеры -->
            <converters:MessageColorConverter x:Key="MessageColorConverter" />
            <converters:MessageTextColorConverter x:Key="MessageTextColorConverter" />
            <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:MessageColumnConverter x:Key="MessageColumnConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
